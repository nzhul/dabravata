@model Dabravata.Models.ViewModels.AllReservationsViewModel
@{
    ViewBag.Title = "Допълнителни страници";
}

<div class="row" style="margin:20px 5px 0 5px;border: 1px solid #bebebe;">
    <div class="col-md-12">
        <h3>Активни резервации:</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Клиент</th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-down text-success" title="Настаняване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-up text-danger" title="Освобождаване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-thumbs-up" title="Потвърждаване"></span></th>
                    <th style="text-align:center;"><img data-toggle="tooltip" title="Настройки" src="~/Areas/Administration/Content/img/cog-icon.png" /></th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("Partials/_Reservations", Model.ActiveReservations)
            </tbody>
        </table>
    </div>
</div>
<div class="row" style="margin:20px 5px 0 5px;border: 1px solid #bebebe;">
    <div class="col-md-6">
        <h3>Запитвания за резервации:</h3>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Клиент</th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-down text-success" title="Настаняване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-up text-danger" title="Освобождаване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-thumbs-up" title="Потвърждаване"></span></th>
                    <th style="text-align:center;"><img data-toggle="tooltip" title="Настройки" src="~/Areas/Administration/Content/img/cog-icon.png" /></th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("Partials/_Reservations", Model.RequestedReservations)
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Потвърдени резервации:</h3>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Клиент</th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-down text-success" title="Настаняване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-up text-danger" title="Освобождаване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-thumbs-up" title="Потвърждаване"></span></th>
                    <th style="text-align:center;"><img data-toggle="tooltip" title="Настройки" src="~/Areas/Administration/Content/img/cog-icon.png" /></th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("Partials/_Reservations", Model.ConfirmedReservations)
            </tbody>
        </table>
    </div>
</div>
<div class="row" style="margin-top:20px;">
    <div class="col-md-6 col-md-offset-5">
        <a class="btn btn-primary" href="@Url.Action("Create")">Добави резервация</a>
    </div>
</div>
<hr />
<div class="row" style="opacity: 0.5;">
    <div class="col-md-12">
        <h3>Отминали резервации:</h3>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Клиент</th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-down text-success" title="Настаняване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-arrow-up text-danger" title="Освобождаване"></span></th>
                    <th><span data-toggle="tooltip" class="fa fa-thumbs-up" title="Потвърждаване"></span></th>
                    <th style="text-align:center;"><img data-toggle="tooltip" title="Настройки" src="~/Areas/Administration/Content/img/cog-icon.png" /></th>
                </tr>
            </thead>
            <tbody>
                @Html.Partial("Partials/_Reservations", Model.PassedReservations)
            </tbody>
        </table>
    </div>
</div>