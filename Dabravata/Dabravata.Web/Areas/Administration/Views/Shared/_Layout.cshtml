<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/main")
    @Styles.Render("~/bundles/administration")

</head>
<body style="background-color: lightgray;">
    <div class="container body-content" style="background-color: #f3f3f3;">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Администрация", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Върни се в публичния сайт", "Index", "Home", new { Area = "" }, null)</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content" style="margin-top:80px;">
            <div class="d-navigation">
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-default">Стаи</a>
                <a href="@Url.Action("Index", "Reservations")" class="btn btn-default">Резервации</a>
                <a href="@Url.Action("Index", "Attractions")" class="btn btn-default">Атракции</a>
                <a href="@Url.Action("Index", "Pages")" class="btn btn-default">Страници</a>
            </div>
            <hr />
            <div class="container">
                @Html.Partial("_MessagePartial")
            </div>
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @*@Scripts.Render("~/bundles/mainScripts")*@
    @*@RenderSection("scripts", required: false)*@
</body>
</html>