@model Dabravata.Models.ViewModels.AttractionViewModel
@{
    var Attraction = Model;
    var imgPath = Attraction.Image.ImagePath + "_BigThumb.jpg";
}

<div class="breadcrumb breadcrumb-1 pos-center">
    <h1>АТРАКЦИИ</h1>
</div>
<div class="content">
    <!-- Content Section -->
    <div class="container margint60">
        <div class="row">
            <div class="col-lg-9">
                <a href="@Url.Action("Details", "Attractions", new { id = Attraction.Id })" class="attraction-bigthumb" style="margin-right:20px;"><img src="/@imgPath" alt="Alternate Text" /></a>
                <a href="@Url.Action("Details", "Attractions", new { id = Attraction.Id })"><h3 class="attraction-title">@Attraction.Title</h3></a>
                <p class="attraction-summary">@Html.Raw(Attraction.Content)</p>
            </div>
            <div class="col-lg-3">
                @Html.Partial("~/Views/Shared/_Sidebar.cshtml");
            </div>
        </div>
    </div>
</div>