      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <div class="header">
            <!-- Header Section -->
            <div class="pre-header">
                <!-- Pre-header -->
                <div class="container">
                    <div class="row">
                        <div class="pull-left pre-address-b"><p><i class="fa fa-map-marker"></i> с. Дъбравата, махала Нишовци - община Ябланица - област Ловеч</p></div>
                        <div class="pull-right">
                            <div class="pull-left">
                                <ul class="pre-link-box">
                                    @*<li><a href="@Url.Action("Index", "Rooms", new { area = "Administration" })"><i class="fa fa-cogs"></i>Администрация</a></li>*@
                                    @*<li><a href="about.html">About</a></li>
                                    <li><a href="contact.html">Contact</a></li>
                                    <li><a href="#">Add Your Link</a></li>*@
                                </ul>
                            </div>
                            @*<div class="pull-right">
                                <div class="language-box">
                                    <ul>
                                        <li><a href="#"><img alt="language" src="~/Content/luxen/temp/english.png"><span class="language-text">ENGLISH</span></a></li>
                                        <li><a href="#"><img alt="language" src="~/Content/luxen/temp/germany.png"><span class="language-text">DEUTSCH</span></a></li>
                                        <li><a href="#"><img alt="language" src="~/Content/luxen/temp/france.png"><span class="language-text">FRANÇAIS</span></a></li>
                                        <li><a href="#"><img alt="language" src="~/Content/luxen/temp/poland.png"><span class="language-text">POLSKI</span></a></li>
                                    </ul>
                                </div>
                            </div>*@
                            <div class="pull-right" style="margin: 12px 0 0 0px;"><i class="fa fa-phone"></i>Телефон за резервация: +359 889 999 887</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-header">
                <!-- Main-header -->
                <div class="container">
                    <div class="row">
                        <div class="pull-left">
                            <div class="logo" style="height:108px;">
                                <a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo.png" /></a>
                            </div>
                        </div>
                        <div class="pull-right">
                            <div class="pull-left">
                                <nav class="nav">
                                    <ul id="navigate" class="sf-menu navigate">
                                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                                            <a href="@Url.Action("Index","Home")">НАЧАЛО</a>
                                        </li>
										@if (ViewBag.LayoutModel != null)
										{
											foreach (var page in ViewBag.LayoutModel.Pages)
											{
												var pageId = page.Id.ToString();
												string active = "";
												if (ViewContext.RouteData.Values["id"] != null && ViewContext.RouteData.Values["Controller"] == "Pages")
												{
													if (ViewContext.RouteData.Values["id"].ToString() == pageId)
													{
														active = "active";
													}
												}
												<li class="@active">@Html.ActionLink((string)page.Title, (string)pageId, "Pages", new { area = string.Empty }, new { @class = "title-uppercase" })</li>
											}
										}
                                        <li class="parent-menu @(ViewContext.RouteData.Values["Controller"].ToString() == "Rooms" ? "active" : "")">
                                            <a href="@Url.Action("Index", "Rooms")">СТАИ/ЦЕНИ</a>
                                            <ul>
                                                @if (ViewBag.LayoutModel != null)
                                                {
                                                    foreach (var RoomCategory in ViewBag.LayoutModel.RoomCategories)
                                                    {
                                                        var roomCategoryId = RoomCategory.Id.ToString();
                                                        <li>@Html.ActionLink((string)RoomCategory.Name, "Index", "Rooms", new { area = string.Empty, categoryId = roomCategoryId }, null)</li>
                                                    }
                                                }
                                            </ul>
                                        </li>
                                        <li class="parent-menu @(ViewContext.RouteData.Values["Controller"].ToString() == "Attractions" ? "active" : "")">
                                            <a href="@Url.Action("Index", "Attractions")">АТРАКЦИИ</a>
                                            <ul>
                                                @if (ViewBag.LayoutModel != null)
                                                {
                                                    foreach (var Attraction in ViewBag.LayoutModel.Attractions)
                                                    {
                                                        var attractionId = Attraction.Id.ToString();
                                                        <li>@Html.ActionLink((string)Attraction.Title, "Details", "Attractions", new { area = string.Empty, id = attractionId }, null)</li>
                                                    }
                                                }
                                            </ul>
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Gallery" ? "active" : "")"><a href="@Url.Action("Index", "Gallery")">ГАЛЕРИЯ</a></li>
                                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"><a href="@Url.Action("Contact", "Home")">КОНТАКТИ</a></li>
                                        @*<li class="parent-menu">
                                            <a href="@Url.Action("QuickReservation", "Home")">РЕЗЕРВАЦИИ</a>
                                        </li>*@
                                    </ul>
                                </nav>
                            </div>
                            <div class="pull-right">
                                <div class="button-style-1 margint45">
                                    <a href="@Url.Action("Index", "Rooms")" @*data-toggle="modal"*@ data-target="#myModal"><i class="fa fa-calendar"></i>РЕЗЕРВИРАЙ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CONTENT -->

        @RenderBody()

        <!-- CONTENT END-->

        <div class="footer margint40">
            <!-- Footer Section -->
            <div class="main-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2 col-sm-2 footer-logo">
                            <a href="@Url.Action("Index","Home")" style="margin-left:-30px;"><img src="~/Content/images/logo.png" /></a>
                        </div>
                        <div class="col-lg-10 col-sm-10">
                            <div class="col-lg-3 col-sm-3">
                            </div>
                            <div class="col-lg-3 col-sm-3">
                                <h6>СВЪРЖЕТЕ СЕ С НАС</h6>
                                <ul class="footer-links">
                                    <li><a href="https://www.facebook.com/dabravata"><i class="fa fa-facebook"></i>Facebook</a></li>
                                    <li><a><i class="fa fa-twitter"></i>Twitter</a></li>
                                    <li><a><i class="fa fa-youtube"></i>YouTube</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-3 col-sm-3">
                                <h6>ЗА КЪЩАТА</h6>
                                <ul class="footer-links">
                                    <li><a href="@Url.Action("Index", "Rooms")">Стаи</a></li>
                                    <li><a href="@Url.Action("Index", "Attractions")">Атракции</a></li>
                                    <li><a href="@Url.Action("Index", "Gallery")">Галерия</a></li>
                                    <li><a href="@Url.Action("Index", "Pages", new { id= 1 })">История</a></li>
                                    <li><a href="@Url.Action("Contact", "Home")">Контакти</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-3 col-sm-3">
                                <h6>CONTACT</h6>
                                <ul class="footer-links">
                                    <li><p><i class="fa fa-map-marker"></i> с. Дъбравата, махала Нишовци - община Ябланица - област Ловеч </p></li>
                                    <li><p><i class="fa fa-phone"></i> +359 889 999 887</p></li>
                                    <li><p><i class="fa fa-envelope"></i> <a href="mailto:dabravata.manager@gmail.com">dabravata.manager@gmail.com</a></p></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pre-footer">
                <div class="container">
                    <div class="row">
                        <div class="pull-left"><p>© Къща за гости "Дъбравата" @DateTime.Now.Year | <a href="https://pochivka.bg/hoteli-teteven-t67">хотели в Тетевен</a></p></div>
                        <div class="pull-right">
                            <ul>
                                <li><p>Дизайн и разработка:</p></li>
                                <li><a href="https://www.facebook.com/nzhul">Добромир Иванов</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/mainScripts")
    @RenderSection("scripts", required: false)
    <script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip().css('cursor', 'pointer');
    });
    </script>
</body>
</html>
